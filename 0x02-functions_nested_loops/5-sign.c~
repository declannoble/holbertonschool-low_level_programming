#include "main.h"
/**
 *print_sign - prints sign of a number
 *
 *@n: character being checked
 *
 *Return: 1 if greater than zero, 0 if equal and -1 is less than 0
 *
 */
int print_sign(int n)
{
	int i;

	if (n > 0)
	{
		_putchar('+');
		return (1);

	}
	if (n == 0)
	{
		_putchar('0');
		return (0);
	}
	else
	{
		_putchar('-');
		return (-1);
	}
}
